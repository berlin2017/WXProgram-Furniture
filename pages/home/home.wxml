    <view class="content" style="background-color:#fff">
      <view class="content_grid" wx:for="{{navigations}}">
        <view class="content_grid_item">
          <image class="content_item_iamge" src="http://fuguangjun.0512iis.com/images/shuzhuo.jpg" mode='widthFix'></image>
          <view class="content_item_text">卧室</view>
        </view>
      </view>

      <view class="content_dingzhi">定制</view>
    </view>

    <view class='h-desc'>

/* pages/product/product_list.wxss */
@import "../common/footer.wxss";

.product_list_container {
  width: 100%;
  height: 100%;
  background: whitesmoke;
}

product_list {
  width: 100%;
  margin-bottom: 10px;
}

.product_item {
  margin-bottom: 5px;
  padding-bottom: 5px;
  width: 100%;
  height: 120px;
  overflow: hidden;
  background: white;
}

.item_imageview{
  width: 30%;
  margin: 5px;
  background: red;
}

.item_image {
  float: left;
  width: 100%;
  /* background: red; */
  /* padding: 5px; */
}

.item_text {
  float: right;
  /* background: red; */
  width: 60%;
  padding-right: 10px;
}

.item_title {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 15px;
}
.item_detail {
  margin-top: 8px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  font-size: 12px;
  color: gray;
}

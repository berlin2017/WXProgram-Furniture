/* pages/product/product_home.wxss */
@import "../common/footer.wxss";

.product_grid {
  display: grid;
  width: 50%;
  float: left;
  box-sizing: border-box;
  -moz-box-sizing: border-box; /* Firefox */
  -webkit-box-sizing: border-box; /* Safari */
  padding: 2px;
}

.product_item {
  background: white;
  font-size: 17px;
  display: inline-block;
  /* margin-right: -4px; */
  text-align: center;
  vertical-align: middle;
  width: 100%;
  transform-style: preserve-3d;
  padding-bottom: 10px;
}

.product_item_image {
  width: 100%;
}
.product_container{
   background: whitesmoke;
}

.main_layout {
  background: whitesmoke;
  position: absolute;
  width: 100%;
  float: left;
}

.navigation {
  position: absolute;
  background: whitesmoke;
  width: 100%;
  float: left;
}

.navigation_item {
  padding: 10px;
}

.navigation_item_text {
  color: red;
  font-size: 12px;
}

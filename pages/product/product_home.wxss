/* pages/product/product_home.wxss */
@import "../common/footer.wxss";

.title_layout{
    position: fixed;
    z-index: 10;
    right: 0;
    left: 0;
    width: 100%;
    height: 50px;
    padding-right: 10px;
    padding-left: 10px;
    border-bottom: 0;
    background-color: #f7f7f7;
    -webkit-box-shadow: 0 0 1px rgba(0, 0, 0, .85);
    box-shadow: 0 0 1px rgba(0, 0, 0, .85);
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
}

.scrollview{
  width: 100%;
  padding-top: 50px;
  /* margin-top: 50px; */
}

.title_name{
    font-size: 17px;
    font-weight: 500;
    line-height: 50px;
    position: absolute;
    display: block;
    width: 100%;
    margin-left: -20px;
    padding: 0;
    text-align: center;
    white-space: nowrap;
    color: red;
}

.title_image{
  width: 30px;
  height: 30px;
  margin-top: 10px;
}

.product_grid {
  display: grid;
  width: 50%;
  float: left;
  box-sizing: border-box;
  -moz-box-sizing: border-box; /* Firefox */
  -webkit-box-sizing: border-box; /* Safari */
  padding: 2px;
}

.product_item {
  background: white;
  font-size: 17px;
  display: inline-block;
  /* margin-right: -4px; */
  text-align: center;
  vertical-align: middle;
  width: 100%;
  transform-style: preserve-3d;
  padding-bottom: 10px;
}

.product_item_image {
  width: 100%;
  height: 300rpx;
  
}

.product_item_name{
   text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  font-size: 15px;
}

.product_container{
   background: whitesmoke;
}

.main_layout {
  background: whitesmoke;
  position: absolute;
  width: 100%;
  float: left;
}

.navigation {
  position: absolute;
  background: whitesmoke;
  width: 100%;
  float: left;
}

.navigation_item {
  padding: 10px;
}

.navigation_item_text {
  color: red;
  font-size: 12px;
}
